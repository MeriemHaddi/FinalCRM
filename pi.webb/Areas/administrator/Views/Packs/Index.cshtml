@model IEnumerable<pi.domaine.Entities.Pack>

@{
    ViewBag.Title = "Index";
   Layout = "~/Areas/AdminSide/Views/Shared/_ListProductLayout.cshtml";
}

<h2>Packs</h2>

<p>

    <a title="" href=@Url.Action("Create", "Packs") class="new-btn btn btn-primary">Creer</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Periode_Engagement)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prix)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.img)

        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Periode_Engagement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @{ string path = "~/Content/Uploads/" + item.img;}
                <img src="@Url.Content(path)" width="100" height="100" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id_Pack }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id_Pack }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id_Pack })
            </td>

        </tr>
    }

</table>
