@model IEnumerable<pi.domaine.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminSide/Views/Shared/_ListProductLayout.cshtml";
}

<center>
    @using (Html.BeginForm())
    {<table>
            <tr>
                <td>
                    <div>
                        Search Products: @Html.TextBox("searchString")

                    </div>
                </td>
                <td>                 <input type="submit" value="Search" id="submit" />             </td>
            </tr>
        </table>}
</center>

@Html.ActionLink("Create New", "Create")</br>
@Html.ActionLink("See Statistics", "Dashboard")
</p>
<table class="table">
    <tr>
        <th>
            Shop
        </th>
        <th>
            Category
        </th>
        <th>
            Product
        </th>

        <th>
            Price
        </th>
        <th>
            Picture
        </th>

        <th>
            Quantity
        </th>
        <th> Edit</th>
        <th> Details</th>
        <th> Delete</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Shop.shop_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryProduct.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>

            <td>
                @{ string path = "~/Content/Uploads/" + item.Picture;}
                <img src="@Url.Content(path)" width="100" height="100" />
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idProduct }, new { @class = "btn btn-primary btn-xs" })
            </td>
            <td>
                @Html.ActionLink("Details", "ProductDescription", new { id = item.idProduct }, new { @class = "btn btn-primary btn-xs" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.idProduct }, new { @class = "btn btn-primary btn-xs" })
            </td>
        </tr>
    }

</table>
